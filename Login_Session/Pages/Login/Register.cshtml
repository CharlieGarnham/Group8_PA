@page
@model Login_Session.Pages.Login.RegisterModel
@{
    ViewData["Title"] = "Register Account";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/site.css" rel="stylesheet" />
<head>
</head>
<style>
    #content {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        grid-auto-rows: minmax(100px, auto);
        max-width: 960px;
        margin: 0 auto;
        grid-gap: 10px;
        grid-template-areas: "header header header" "nav nav nav" "nav nav nav" "nav nav nav";
    }

    #content {
        display: grid;
        text-align: center;
        grid-template-columns: repeat(4,25%);
        grid-auto-rows: minmax(100px, auto);
        max-width: 1000px;
        margin: 0 auto;
        grid-gap: 10px;
        grid-template-areas: "header header header header" "nav nav nav nav" "nav nav nav nav";
    }





        #content > * {
            padding: 10px;
        }

    header {
        grid-area: header;
    }

    main {
        grid-area: main;
    }
    /*section{
                grid-area: section;
            }*/
    aside {
        grid-area: aside;
    }

    nav {
        grid-area: nav;
    }
    /*footer{
                grid-area: footer;
            }
            */

</style>

<body>
    <div id="content">
        <header>
            <h1>Register</h1>
        </header>
        <br />
        <nav>
            <form method="post">

                <div class="form-group">
                    <label asp-for="User.FirstName" class="control-label"></label>
                    <input asp-for="User.FirstName" class="form-control" />
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.UserName" class="control-label"></label>
                    <input asp-for="User.UserName" class="form-control" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.Password" class="control-label"></label>
                    <input asp-for="User.Password" class="form-control" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" value="Register" class="btn btn-lg btn-secondary btn-block" />
                </div>
                <br />


            </form>
            </nav>
    </div>

</body>