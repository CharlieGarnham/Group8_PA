@page
@model Login_Session.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}
<script src="~/js/site.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/site.css" rel="stylesheet" />
<head>
</head>
<style>
    #content {
        display: grid;
        grid-template-columns: repeat(4,1fr);
        grid-auto-rows: minmax(100px, auto);
        max-width: 960px;
        margin: 0 auto;
        grid-gap: 10px;
        grid-template-areas: "header header header" "nav nav nav" "nav nav nav" "nav nav nav";
    }

    #content {
        display: grid;
        text-align: center;
        grid-template-columns: repeat(4,25%);
        grid-auto-rows: minmax(100px, auto);
        max-width: 1000px;
        margin: 0 auto;
        grid-gap: 10px;
        grid-template-areas: "header header header header" "nav nav nav nav" "nav nav nav nav";
    }





        #content > * {
            padding: 10px;
        }

    header {
        grid-area: header;
    }

    main {
        grid-area: main;
    }
    /*section{
                grid-area: section;
            }*/
    aside {
        grid-area: aside;
    }

    nav {
        grid-area: nav;
    }
    /*footer{
                grid-area: footer;
            }
            */

</style>




<body>

    <div id="content">
        <header>
            <h1>Login</h1>
        </header>
        <br />
        <nav>
            <form method="post">

                <div class="form-group">
                    <label class="control-label">Login</label>
                    <input type="text" asp-for="User.UserName" class="form-control" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="User.Password" class="control-label">Password</label>
                    <input asp-for="User.Password" type="password" class="form-control" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>

                <div onmousedown="mDown(this)">
                    <input type="submit" value="Login" class="btn btn-lg btn-secondary btn-block" />
                </div>
                <br />

                <div>
                    <p><a class="btn-outline-secondary btn-sm" asp-page="/Login/Register">If you don't have an account click here</a></p>
                </div>

            </form>
        </nav>

        <div>
            <p style="color: red">@Model.Message</p>
        </div>
    </div>

</body>
