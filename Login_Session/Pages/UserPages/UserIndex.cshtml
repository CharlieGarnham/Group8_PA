@page
@model Login_Session.Pages.UserPages.UserIndexModel
@{
    ViewData["Title"] = "Main Menu";
}

<link href="~/css/site.css" rel="stylesheet" />
<html>
<head>
    <link rel="stylesheet" href="style.css">
    <title>My HTML</title>

    <style>

        #content {
            display: grid;
            grid-template-columns: repeat(4,1fr);
            grid-auto-rows: minmax(100px, auto);
            max-width: 960px;
            margin: 0 auto;
            grid-gap: 10px;
            grid-template-areas: "header header header header" "nav nav nav nav" "nav nav nav nav" "nav nav nav nav";
        }

        #content {
            display: grid;
            text-align: center;
            grid-template-columns: repeat(4,25%);
            grid-auto-rows: minmax(100px, auto);
            max-width: 1000px;
            margin: 0 auto;
            grid-gap: 10px;
            grid-template-areas: "header header header header" "nav nav nav nav" "nav nav nav nav";
        }


            #content > * {
                padding: 10px;
            }

        header {
            grid-area: header;
        }

        main {
            grid-area: main;
        }
        /*section{
                grid-area: section;
            }*/
        aside {
            grid-area: aside;
        }

        nav {
            grid-area: nav;
        }
        /*footer{
                grid-area: footer;
            }
            */

    </style>

</head>

<body>
    <div id="content">
        <header>
            <h1>CAA Gyms - Main menu</h1>
            <h4>Welcome @Model.FirstName</h4>
        </header>

        <nav>
            <br />
            <div class="row">

                <div class="col-sm-2">
                    <p><a class="btn btn-outline-secondary text-dark btn-sm" asp-page="/UserPages/ViewProfile">User Profile Page</a></p>
                </div>

                <div class="col-sm-2">
                    <p><a class="btn btn-outline-secondary text-dark btn-sm" asp-page="/UserPages/ChooseWorkout">Generate Workout</a></p>
                </div>

                <div class="col-sm-2">
                    <p><a class="btn btn-outline-secondary text-dark btn-sm" asp-page="/LogoutPage/Logout">Logout</a></p>
                </div>

            </div>

        </nav>


    </div>

</body>
</html>



