@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link href="~/css/site.css" rel="stylesheet" />
<html>
<head>
    <link rel="stylesheet" href="style.css">
    <title>My HTML</title>

    <style>

            #content
            {
                display: grid;
                grid-template-columns: repeat(4,1fr);
                grid-auto-rows: minmax(100px, auto);
                max-width:960px;
                margin: 0 auto;
                grid-gap: 10px;
                grid-template-areas:
                "header header header header"
                "nav nav nav nav"
                "nav nav nav nav"
                "nav nav nav nav";
            }

                #content {
                
                    display: grid;
                    text-align: center;
                    grid-template-columns: repeat(4,25%);
                    grid-auto-rows: minmax(100px, auto);
                    max-width:1725px;
                    margin: 0 auto;
                    grid-gap: 10px;
                    grid-template-areas:
                    "header header header header"
                    "nav nav nav"
                    "nav nav nav";
                }
            

            #content>*{
                padding:10px;
            }

            header{
                grid-area: header;
            }
            main{
                grid-area: main;
            }
            /*section{
                grid-area: section;
            }*/
            aside{
                grid-area: aside;
            }
            nav{
                grid-area: nav;
            }
            /*footer{
                grid-area: footer;
            }
            */

    </style>

</head>

<body>
    <div id="content">
        <header>
            <h1>CAA Gyms</h1>
            <h4>A new way to generate workout plans</h4>
        </header>

        <nav>
            <img class="Gym" src="~/Files/Gym.png" alt="CAA gyms" width="900" height="600">
        </nav>


    </div>

</body>
</html>